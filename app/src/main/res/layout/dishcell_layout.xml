<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="300dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/layDishPicture"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:alpha="1"
        android:background="@color/color_OrangeTheme_FoodCellBackground"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp">

            <com.shuishou.digitalmenu.ui.ChangeLanguageTextView
                android:id="@+id/foodNameText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:gravity="top"
                android:singleLine="true"
                android:textColor="@color/color_OrangeTheme_ChoosedFoodFont"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/foodcellprice_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/foodPriceText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textColor="@color/color_OrangeTheme_ChoosedFoodFont"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/chooseButtonLayout"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/chooseBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:contentDescription="ChooseButton"
                android:scaleType="centerInside"
                android:src="@drawable/select_btn_icon_s" />
            <!--
            <TextView
                android:id="@+id/tvChoosedAmount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/small_red_circle"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:visibility="invisible" />
-->
        </FrameLayout>


    </LinearLayout>

</LinearLayout>
