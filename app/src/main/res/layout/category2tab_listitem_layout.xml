<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.shuishou.digitalmenu.ui.ChangeLanguageTextView
        android:id="@+id/category2_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/color_OrangeTheme_Category2Font"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgChoosedArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:visibility="invisible"
        app:srcCompat="@drawable/category2_choosed_arrow3" />

</LinearLayout>